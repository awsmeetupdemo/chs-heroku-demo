<br />
<%= render "guest_book/form" %>

<a class="btn-floating btn-large waves-effect waves-light <%= ChsHerokuDemo::COLOR_THEME %> right" href="<%= wipe_book_path %>">
  <i class="material-icons">delete_sweep</i>
</a>
<h4>Guests</h4>
Total of <%= @guests.count %>

<% @guests.each do |guest| %>
  <div class="col s12 m7">
    <div class="card horizontal">
      <div class="card-image">
        <%= avitar_image(seed: guest.image_number, width: 150, height: 150) %>
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">
            <%= guest.name %>
            <i class="material-icons" style="color: #<%= guest.color %> !important;">person</i>
          </span>
          <p></p>
        </div>
        <div class="card-action">
          <%= link_to("Remove",
                      destroy_path(guest),
                      method: :delete,
                      class: "#{ChsHerokuDemo::COLOR_THEME}-text text-darken-2") %>
        </div>
      </div>
    </div>
  </div>
<% end %>

